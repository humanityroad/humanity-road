                        <label>Event Type</label>
                        <input ng-model="timesheet.EventType" disabled>
                    </md-input-container>
                    <md-input-container class="md-block" flex-gt-xs>
                        <label>Location</label>
                        <input ng-model="timesheet.Location" disabled>
